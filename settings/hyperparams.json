{
    "results_root": "/mnt/users/ikostiuk/local/3d_point_cloud/results",
    "clean_results_dir": true,
    "clean_weights_dir": true,

    "cuda": true,
    "gpu": 0,

    "reconstruction_loss": "combined",

    "metrics": [],

    "dataset": "custom",
    "data_dir": "/mnt/users/ikostiuk/home/3d_point_cloud/dataset/custom",
    "classes": ["airplane"],
    
    "shuffle": true,
    "transforms": ["rotate"],
    "num_workers": 8,
    "n_points": 4096,

    "max_epochs": 2000,
    "batch_size": 64,
    "gradient_penalty_coef": 10,
    "reconstruction_coef": 0.05,
    "z_size": 2048,
    "pointnet": false,
    "feature_regularization_coef": 0.001,
    "wasserstein": true,

    "p": 0.2,
    "z_beta_a": 0.01,
    "z_beta_b": 0.01,

    "normal_mu": 0.0,
    "normal_std": 0.2,

    "seed": 2018,
    "save_frequency": 1,
    "epsilon": 0.001,

    "target_network_input": {
        "constant": false,
        "loss": {
            "default": {
                "chamfer_distance": true,
                "mesh_edge_loss": false,
                "mesh_laplacian_smoothing": false,
                "mesh_normal_consistency": false,
                "point_mesh_edge_distance": false,
                "point_mesh_face_distance": false,
                "colors": true
            },
            "__comment":"Only with combined loss",
            "change_to": {
                "enable": true,
                "after_epoch": 300,

                "chamfer_distance": true,
                "mesh_edge_loss": false,
                "mesh_laplacian_smoothing": false,
                "mesh_normal_consistency": false,
                "point_mesh_edge_distance": true,
                "point_mesh_face_distance": false,
                "colors": true
            }
            
        },
       
        "normalization": {
            "enable": true,
            "type": "progressive",
            "epoch": 100
        }
    },

    "model": {
        "D": {
            "dropout": 0.5,
            "use_bias": true,
            "relu_slope": 0.2
        },
        "HN": {
            "use_bias": true,
            "relu_slope": 0.2
        },
        "E": {
            "use_bias": true,
            "relu_slope": 0.2
        },
        "TN": {
            "use_bias": true,
            "relu_slope": 0.2,
            "freeze_layers_learning": false,
            "layer_out_channels": [32]
        }
    },
    "optimizer": {
        "D": {
            "type": "Adam",
            "hyperparams": {
                "lr": 0.0005,
                "weight_decay": 0,
                "betas": [0.9, 0.999],
                "amsgrad": false
            }
        },
        "E_HN": {
            "type": "Adam",
            "hyperparams": {
                "lr": 0.0005,
                "weight_decay": 0,
                "betas": [0.9, 0.999],
                "amsgrad": false
            }
        }
    }
}
